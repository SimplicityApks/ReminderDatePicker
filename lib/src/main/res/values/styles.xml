<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BorderlessButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/abc_list_selector_holo_light</item>
    </style>

    <style name="PickerSpinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <!--spinnerMode >= API Level 11-->
        <item name="android:spinnerMode" tools:ignore="NewApi">dropdown</item>
    </style>

    <style name="PickerSpinner.DateSpinner">
    </style>

    <style name="PickerSpinner.TimeSpinner">
        <item name="android:layout_marginLeft">4dp</item>
        <!--layout_marginStart >= API Level 17-->
        <item name="android:layout_marginStart" tools:ignore="NewApi">4dp</item>
    </style>

    <style name="SpinnerFooterStyle" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@color/footer_background</item>
    </style>
</resources>